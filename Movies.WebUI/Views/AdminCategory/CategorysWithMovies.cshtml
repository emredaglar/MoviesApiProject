@using Movies.WebUI.Dtos
@model List<ResultCategoryWithMovieDto>
@{
    ViewData["Title"] = "CategorysWithMovies";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@foreach (var item in Model)
{

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <a href="/x/x" class="btn btn-outline-primary" style="float: right; margin-top: 20px;"><i class="mdi mdi-plus-box"></i> Kategoriye Ait İçerik Ekle</a>
                    <h4 class="card-title">@item.categoryName İçerikleri</h4>
                    <div class="table-responsive">
                        <br />
                        <table class="table table-bordered table-hover" style="color:white;">
                            <thead>
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">#</th>
                                    <th scope="col" class="sort" data-sort="budget">İsmi</th>
                                    <th scope="col" class="sort" data-sort="status">Başlık</th>
                                    <th scope="col" class="sort" data-sort="status">Kapak</th>

                                    <th scope="col" class="sort text-center" data-sort="completion">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in item.movies)
                                {

                                    <tr>
                                        <td>@x.MovieId</td>
                                        <td>@x.MovieName</td>
                                        <td>@x.MovieDescription</td>
                                        <td><image style="width:80px; height:80px;" src="@x.MovieImageUrl"></image></td>

                                        <td class="text-center">
                                            <a href="/x/x/" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="ni ni-fat-remove"></i> Sil</a>
                                            <a href="/x/x/" class="btn btn-outline-info" style="margin-left:25px;"><i class="ni ni-scissors"></i> Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
